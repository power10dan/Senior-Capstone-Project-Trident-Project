#:kivy 1.8.0

<Poseidon>:
    BoxLayout:
        size: root.width,root.height
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Poseidon'

                ActionButton:
                    text: '<'
                    on_release: screen.load_previous()

                ActionButton:
                    text: '>'
                    on_release: screen.load_next()
        Carousel:
            id:screen
            scroll_timeout: 0
            loop: True
            
            SettingsMenu:
            
            DataOutput:
        
<SettingsMenu>:
    GridLayout:
        orientation: 'vertical'
        cols: 2
        size: root.size
        spacing: "10dp"
        padding: "10dp"
        
        Label:
            text: 'Left Receiver'
        Button:
            id: 'leftReceiver'
            text: '-'
            on_release:
                root.dropdown('leftReceiver')

        Label:
            text: 'Center Receiver'
        Button:
            id: 'centerReceiver'
            text: '-'
            on_press:
                root.dropdown('centerReceiver')

        Label:
            text: 'Right Receiver'
        Button:
            id: 'rightReceiver'
            text: '-'
            on_press:
                root.dropdown("rightReceiver")
        
        Label:
            text: 'Vertical Tolerance (m):'
        TextInput
            id: vertical_tolerance
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.vertical_tolerance)
            
        Label:
            text: 'Horizontal Tolerance (m):'
        TextInput:
            id: horizontal_tolerance
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.horizontal_tolerance)

        Label:
            text: 'GPS Spacing (m):'    
        TextInput:
            id: gps_spacing
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.gps_spacing)
            
        Label:
            text: 'Antenna Height (m):'
        TextInput:
            id: horizontal_tolerance
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.antennaHeight)
            
        Label:
            text: 'Phase Center (m):'
        TextInput:
            id: horizontal_tolerance
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.phaseCenter)    
        

        Button:
            text: 'Submit'
            size_hint_x: None
            width: '100dp'
            on_release:
                root.submit(horizontal_tolerance.text,vertical_tolerance.text,gps_spacing.text)

        Button:
            text: 'Reset Tolerances'
            size_hint_x: None
            width: '100dp'
            on_release:
                vertical_tolerance.text = str(0.1)
                horizontal_tolerance.text = str(0.05)
                gps_spacing.text = str(0.5)
                root.submit('0.05','0.1','0.5')
        
    Button:
        text: 'Start Survey'
        width: self.height*3
                
<DataOutput>:  
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        BoxLayout:
            size_hint_y: .05
            Button:
                size_hint_x: None
                width: self.height*1.75
                text: 'Prev'
                on_release: carousel.load_previous()

            Button:
                size_hint_x:None
                width: self.height*1.75
                text: 'Next'
                on_release: carousel.load_next()  

        Carousel:
            id: carousel
            loop: True
            
            ##Label:
            ##    id: currentScreenLabel
            ##    text = self.text
            
            ColoredLabel:
                text: 'Data Dummy Slide 1'

            ColoredLabel:
                text: 'Data Dummy Slide 2'
            
            ColoredLabel:
                text: 'Data Dummy Slide 3'
                
            ColoredLabel:
                text: 'Data Dummy Slide 4'

<ColoredLabel@Label>:
    fort_size: '48sp'
    color: (.6, .6, .6, 1)
    canvas.before:
        Color:
            rgb: (.9, .9, .9)
        Rectangle:
            pos: self.x + sp(2), self.y+ sp(2)
            size: self.width-sp(4), self.height - sp(4)
            
