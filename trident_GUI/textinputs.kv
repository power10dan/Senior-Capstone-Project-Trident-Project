DataShowcase:
    name:'TextInputs'
    focused: vertical_tolerance
    on_parent:
        if not args[1] and self.focused: self.focused.focus = False
        if args[1]: vertical_tolerance.focus = True

    BoxLayout:
        size_hint_y: None
        ##orientation: 'vertical'
        
        Label:
            text: 'vertical tolerance'
            size_hint_y: None
        CTextInput
            id: vertical_tolerance
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: str(root.vertical_tolerance)
            
        Label:
            text: 'horizontal tolerance'
        CTextInput:
            id: horizontal_tolerance
            size_hint_y: .12,.12
            height: '32dp'
            multiline: False
            text: str(root.horizontal_tolerance)
            
        CTextInput:
            id: gps_spacing
            size_hint_y: .12,.12
            height: '32dp'
            multiline: False
            text: str(root.gps_spacing)

    BoxLayout:
        size_hint_y: None
        orientation: 'horizontal'

        Button:
            text: 'Submit'
            size_hint_x: None
            width: '100dp'
            on_release: app.submit()

        Button:
            text: 'Connect to router'
            size_hint_x: None
            width: '150dp'
            on_release:
                app.popup_open()
                
<CTextInput@TextInput>
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self
