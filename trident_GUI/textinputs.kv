DataShowcase:
    name:'TextInputs'
    focused: ti_default
    on_parent:
        if not args[1] and self.focused: self.focused.focus = False
        if args[1]: ti_default.focus = True

    BoxLayout:
        size_hint_y: None
        orientation: 'vertical'

        CTextInput
            id: ti_default
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: 'Height Tolerance Input'
            focus: True

        CTextInput:
            size_hint_y: .12,.12
            height: '32dp'
            multiline: False
            text: 'Horizontal Tolerance Input'

        CTextInput:
            size_hint_y: .4, .4
            height: '32dp'
            multiline: False
            text: 'Vertical Tolerance Input'

    BoxLayout:
        size_hint_y: None
        orientation: 'horizontal'

        Button:
            text: 'Submit'
            size_hint_x: None
            width: '100dp'

        Button:
            text: 'Connect to router'
            size_hint_x: None
            width: '150dp'
            on_release:
                app.popup_open()
<CTextInput@TextInput>
    on_focus:
        screen = self.parent.parent.parent.parent
        if screen.parent: screen.focused = self
