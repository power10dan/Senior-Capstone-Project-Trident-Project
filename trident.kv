#:kivy 1.8.0

<Poseidon>:
	survey: survey
	jobNameLabel: jobNameLabel
	pointNameLabel: pointNameLabel
	jobNameButton:jobNameButton
	newPointButton: newPointButton
	dataCarousel: dataCarousel
	gps1Status: gps1Status
	gps2Status: gps2Status
	gps3Status: gps3Status
	
	BoxLayout:
		size: root.width,root.height
		orientation: 'vertical'
		top:99
		BoxLayout:
			id: navigation
			size_hint_y: .1

			Button:
				id: settingsButton
				text: 'Settings'
				size_hint_x: None
				on_press:
					root.Settings_Button_pressed()

			Button:
				id: jobNameButton
				text: 'Survey Name'

			Label:
				id: jobNameLabel
			Label:
				text:"-"
			Label:
				id: pointNameLabel
				text: 'Home'
				
			Button:
				id: survey
				size_hint_x: None
				text: 'Start Survey'

			Button:
				id:newPointButton
				text: 'Add Point'
			
		Carousel:
			id: dataCarousel
			loop: True
			on_current_slide: 
				pointNameLabel.text = str(args[1].pointName)
			
			BoxLayout:
				size: root.width,root.height
				orientation: 'horizontal'
				name:"Home"
				canvas:
					Ellipse:
						size: 10,10
						pos: 100,100
				AnchorLayout:
					anchor_x: 'right'
					anchor_y: 'top'
					BoxLayout:
						orientation:'vertical'
						size_hint:None,None
						size: 225,105
						BoxLayout:
							orientation:'horizontal'
							size_hint:None,None
							size: 225,75
							Image:
								id: gps1Status
								size_hint: (None,None)
								size: 75,75
								source: 'red.png'
								
							Image:
								id: gps2Status
								size_hint: (None,None)
								size: 75,75
								source: 'red.png'

							Image:
								id: gps3Status
								size_hint: (None,None)
								size: 75,75
								source: 'red.png'
						Label:
							id: multiPStatus
							text: 'Not Ready'
							size_hint: (None,None)
							size:225,30

<SettingsMenu>:
	cols: 3
	padding: 10
	spacing: 10

	vertical_tolerance: vertical_tolerance
	horizontal_tolerance: horizontal_tolerance
	gps_spacing: gps_spacing
	antennaHeight: antennaHeight
	phaseCenter: phaseCenter
	leftReceiver: leftReceiver
	centerReceiver: centerReceiver
	rightReceiver: rightReceiver
	verticalLabel: verticalLabel
	horizontalLabel: horizontalLabel
	gpsSpacingLabel: gpsSpacingLabel
	antennaLabel: antennaLabel
	phaseLabel: phaseLabel

	Label:
		text: 'Left Receiver'
	Button:
		id: leftReceiver
		on_press:
			root.updateLR = True
			root.receiverPopup(self,"Left Receiver")

	RButton:
		id: clearLR
		on_press:
			leftReceiver.text = ''
			root.clearReceiver('leftReceiver')

	Label:
		text: 'Center Receiver'
	Button:
		id: centerReceiver
		on_press:
			root.updateCR = True
			root.receiverPopup(self,"Center Receiver")

	RButton:
		id: clearCR
		on_press:
			centerReceiver.text = ''
			root.clearReceiver('centerReceiver')

	Label:
		text: 'Right Receiver'
	Button:
		id: rightReceiver
		on_press:
			root.updateRR = True
			root.receiverPopup(self,"Right Receiver")

	RButton:
		id: clearRR
		on_press:
			rightReceiver.text = ''
			root.clearReceiver('rightReceiver')

	Label:
		text: 'Vertical Tolerance (m):'
	FInput
		id: vertical_tolerance
	errorLabel:
		id: verticalLabel

	Label:
		text: 'Horizontal Tolerance (m):'
	FInput:
		id: horizontal_tolerance
	errorLabel:
		id: horizontalLabel

	Label:
		text: 'GPS Spacing (m):'
	FInput:
		id: gps_spacing
	errorLabel:
		id: gpsSpacingLabel

	Label:
		text: 'Antenna Height (m):'
	FInput:
		id: antennaHeight
	errorLabel:
		id: antennaLabel

	Label:
		text: 'Phase Center (m):'
	FInput:
		id: phaseCenter
	errorLabel:
		id: phaseLabel

	Button:
		text: 'Submit'
		on_release:
			root.submit(horizontal_tolerance.text,vertical_tolerance.text,gps_spacing.text,antennaHeight.text,phaseCenter.text)

	Button:
		text: 'Reset Tolerances'
		on_release:
			vertical_tolerance.text = str(0.1)
			horizontal_tolerance.text = str(0.05)
			gps_spacing.text = str(0.5)
			antennaHeight.text = str(2.02)
			phaseCenter.text = str(0.05)

<RButton@Button>
	text: "X"
	size_hint_x: None
	width: 25

<FInput@TextInput>
	input_filter:'float'
	multiline: False

<errorLabel@Label>
	color: 1,0,0,1
	size_hint_x: None
	width: 25

<SurveyPage>:
	measureButton: measureButton
	counterLabel: counterLabel
	multiCounterLabel: multiCounterLabel
	epochInput: epochInput
	canvas.after:
	BoxLayout:
		size: root.width,root.height
		orientation: 'horizontal'
		BoxLayout:
		GridLayout:
			cols: 2
			padding: 10
			spacing: 10
			size_hint: None,None
			size: 300,150

			Label:
				text: 'Counter'
			Label:
				id:counterLabel
			Label:
				text: 'Multipath Counter'
			Label:
				id:multiCounterLabel
			Label:
				text: 'Epochs to Measure:'
			TextInput:
				id: epochInput
				multiline: False
				input_filter: 'int'
			Button:
				id: measureButton
				text: 'Measure Point'
